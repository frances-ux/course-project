<!-- reference index page for the for of loop within a form tag so you can use an action with the correct path & with the id of each book or comic and the method -->

<!-- form inside the td that will have the post method for both but one of them will be for edit and one for delete  -->

<% for (book of data) { %>
        <tr>
            <td><%= book.title %></td>
            <td><form action="/admin-console/update-book/<%= book._id %>" method="post"><input type="button" value="EDIT"></form></td>
            <td><form action="/books/<%= book._id%>?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded"><input type="submit" value="DELETE"></form></td>
        </tr>
<% } %>



