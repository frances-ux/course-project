<%- include('../partials/head') -%> 

<%- include('../partials/nav') -%> 

    <div class="update-container">
        <div class="update-content">
            <h1 class="title centered-text">UPDATE COMIC</h1>
            <form action="#">
                <div>
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" value="title value stored in database">
                </div>

                <div>
                    <label for="author">Author:</label>
                    <input type="text" name="author" id="author" value="author value stored in database">
                </div>

                <div>  
                    <label for="publisher">Publisher:</label>
                    <select name="publisher" id="publisher">
                        <option value="" disabled selected hidden>publisher value stored in database</option>
                        <option value="boombox">BOOM! Box</option>
                        <option value="dccomics">DC Comics</option>
                        <option value="hna">Harry N. Abrams</option>
                        <option value="iconbooks">Icon Books</option>
                        <option value="imagecomics">Image Comics</option>
                        <option value="marvel">Marvel</option>
                        <option value="ss">Simon &amp; Schuster</option>
                        <option value="tsp">Top Shelf Productions</option>
                        <option value="vml">VIZ Media LLC</option>
                    </select>
                </div>

                <div>
                    <label for="genre">Genre:</label>
                    <input type="text" name="genre" id="genre" value="genre data stored in database">
                </div>

                <div>
                    <label for="pages">Number of pages:</label>
                    <input type="text" name="pages" id="pages" placeholder="pages stored in database">
                </div>

                <div>
                    <label for="rating">Rating:</label>
                    <input type="text" name="rating" id="rating" maxlength="4" size="4" placeholder="rating stored in database">
                </div>

                <div>
                    <label for="synopsis">Synopsis:</label>
                    <textarea id="synopsis" name="synopsis" rows="2" cols="20" placeholder="Synopsis">synopsis value stored in database</textarea>
                </div>
            </form> 
            <div class="centered-text">
                    <input type="submit" value="Submit">
            </div>
        </div>
    </div>

<%- include('../partials/footer') -%>